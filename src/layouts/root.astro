---
import { SEO } from "astro-seo";
import avatar from "../images/avatar.webp";
import { getImage } from "astro:assets";

const title = "Maserooni's VRChat Assets";
const description = "A collection of VRChat assets that I've made!";
const thumbnail = getImage({
  src: avatar,
  width: 1500,
  height: 1500,
}).then((image) => image.src);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <slot name="seo">
      <SEO
        {title}
        {description}
        openGraph={{
          basic: {
            title,
            type: "website",
            image: await thumbnail,
          },
          image: { width: 1500, height: 1500 },
          optional: { description },
        }}
      />
    </slot>
    <slot name="head" />
  </head>
  <body class="bg-gray-200">
    <slot />
  </body>
</html>
