---
import type { HTMLAttributes, HTMLTag } from "astro/types";
import { clsx } from "clsx";

type Props<T extends HTMLTag | undefined> = T extends HTMLTag
  ? HTMLAttributes<T> & { tag: T }
  : HTMLAttributes<"button">;

const { tag: Tag = "button", ...props } = Astro.props;
---

<Tag
  {...props}
  class={clsx(
    "inline-block pxxy-2 bg-blue-700 rounded text-white font-medium outline-(2 solid transparent)",
    "hover:(outline-black bg-blue-800) transition-all",
    "disabled:(bg-gray-700 cursor-not-allowed)",
    props.class,
  )}
>
  <slot />
</Tag>
